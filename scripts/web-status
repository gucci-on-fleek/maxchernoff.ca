set -eu
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run as root"
    exit 1
fi

watch --color -n1 "SYSTEMD_COLORS=1 systemctl --user -M web@ list-units --with-dependencies --quiet --all overleaf-pod.service caddy.service update-analytics.{timer,target}"

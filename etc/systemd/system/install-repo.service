[Unit]
Description=Install the files from the server Git repository
After=pull-repo.service

[Service]
# Limit the permissions to the minimum necessary
User=repo
AmbientCapabilities=CAP_CHOWN CAP_DAC_OVERRIDE CAP_FOWNER

Type=oneshot
ExecStart=/usr/local/sbin/web-install %h/maxchernoff.ca/install-rules.toml

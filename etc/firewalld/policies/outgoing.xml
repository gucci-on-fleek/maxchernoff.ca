<!-- Reject everything NOT listed -->
<policy target="REJECT">
    <!-- Metadata -->
    <short>Outgoing</short>
    <description>
        Allow outgoing traffic only to the specified ports.
    </description>

    <!-- Target Interfaces -->
    <ingress-zone name="HOST"/>
    <egress-zone name="ANY"/>

    <!-- Defaults -->
    <service name="mdns"/>
    <service name="dhcpv6-client"/>

    <!-- SSH (for Git) -->
    <service name="ssh"/>

    <!-- Websites -->
    <service name="http"/>
    <service name="https"/>
    <service name="http3"/>

    <!-- DNS -->
    <service name="dns"/>
    <service name="dns-over-tls"/>

    <!-- NTP -->
    <service name="ntp"/>

    <!-- ICMP -->
    <protocol value="icmp"/>
    <protocol value="ipv6-icmp"/>

    <!-- Apply the allowlist -->
    <accept/>
</policy>

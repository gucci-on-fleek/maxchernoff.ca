# UUID						Mountpoint			Type	Options											Dump	Order
UUID=!!filesystems.boot!!	/boot				ext4    defaults										1		2
UUID=!!filesystems.efi!!	/boot/efi			vfat    umask=0077,shortname=winnt						0		2
UUID=!!filesystems.swap!!	none				swap    defaults										0		0
UUID=!!filesystems.root!!	/ 					btrfs	defaults,compress=zstd:3,ro,noatime				0		0
UUID=!!filesystems.root!!	/home/				btrfs   subvol=00,compress=zstd:3,noatime				0		0
UUID=!!filesystems.root!!	/home/.snapshots	btrfs   subvol=00/.snapshots,compress=zstd:3,noatime	0		0

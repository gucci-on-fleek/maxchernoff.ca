[Unit]
Description="Update TeX Live"
After=network.target

[Service]
Type=oneshot
ExecStart=%h/texlive/bin/x86_64-linux/tlmgr update --all --self
ExecStart=restorecon -R %h/texlive

[Install]
WantedBy=default.target

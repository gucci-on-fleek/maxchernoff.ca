[Socket]
Accept=no
NoDelay=true
BindIPv6Only=both

# fd/3
ListenStream=80

# fd/4
ListenStream=443

# fdgram/5
ListenDatagram=443

# fd/6
ListenStream=%t/caddy-admin.sock
SocketMode=0600

[Install]
WantedBy=sockets.target

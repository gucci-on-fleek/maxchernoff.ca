[Build]
SetWorkingDirectory=%h/flask/
ImageTag=localhost/flask-local:latest
Pull=always

[Unit]
After=podman.socket network-ready.service
Requires=podman.socket

[Service]
Type=oneshot
RemainAfterExit=no
ExecStartPost=sh -c "{ sleep 1; systemctl --user stop --no-block flask-local-build.service; } & disown"
